@model DNB.Supermarket.Entities.ViewModels.RegisterViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/node_modules/style.css" rel="stylesheet" />
    <link href="~/node_modules/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/node_modules/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/node_modules/jquery/dist/jquery.min.js"></script>

    @*<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
        <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>*@
</head>
<body>

    <div class="wrapper fadeInDown">
        <div id="formContent">
            <!-- Tabs Titles -->
            <!-- Icon -->
            <div class="fadeIn first">
                <h3>Register</h3>
            </div>

            <!-- Login Form -->
            @*<form role="form" asp-controller="Account" asp-action="Login" method="post">
                    <input type="text" asp-for="UserName" class="fadeIn second" placeholder="Username">
                    <input type="password" asp-for="Password" class="fadeIn third" placeholder="Password">
                    <button type="submit" class="btn btn-info col-md-10 col-md-offset-1" style="margin-bottom: 10px">Log In</button>
                </form>*@
            <h3>@TempData["message"]</h3>
            <div class="form-horizontal">
                @using (Html.BeginForm("Register", "Account", FormMethod.Post))
                {

                    @Html.ValidationSummary();
                    @Html.TextBoxFor(x => x.UserName, new { @class = "fadeIn second", type = "text", placeholder = "Username" })
                    @Html.TextBoxFor(x => x.Password, new { @class = "fadeIn third", type = "password", placeholder = "Password" })
                    @Html.TextBoxFor(x => x.Name, new { @class = "fadeIn fourth", type = "text", placeholder = "Name" })
                    @Html.TextBoxFor(x => x.Surname, new { @class = "fadeIn fifth", type = "text", placeholder = "Surname" })
                    @Html.TextBoxFor(x => x.Email, new { @class = "fadeIn sixth", type = "email", placeholder = "Email" })
                    @*<button type="submit" class="fadeIn fourth">Register</button>*@
                    <input type="submit" class="fadeIn seventh" value="Register" />
                }
            </div>



        </div>
    </div>

</body>
</html>
